        ]
    },
    "uninstaller": {
        "script": [
            "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "if (Test-Path Registry::HKEY_CLASSES_ROOT\\quicker) {",
